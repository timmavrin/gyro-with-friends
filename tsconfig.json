{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "./lib/",
    "target": "ES6",
    "sourceMap": true,
    "declaration": true,
    "jsx": "preserve",
    "lib": ["ESNext", "dom"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules"]
}
